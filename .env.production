# ========================================
# SUN BANK PRODUCTION ENVIRONMENT
# ========================================

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0
FRONTEND_URL=https://sunbank.com
BACKEND_URL=https://api.sunbank.com
ALLOWED_ORIGINS=https://sunbank.com,https://www.sunbank.com

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sunbank?retryWrites=true&w=majority
REDIS_URL=redis://redis-server:6379
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password_here

# Security
JWT_SECRET=your_jwt_secret_key_min_32_characters_change_this_in_production
JWT_EXPIRE=7d
BCRYPT_SALT_ROUNDS=12
ENCRYPTION_KEY=your_32_character_encryption_key_here
HMAC_SECRET=your_hmac_secret_key_here

# Payment Gateway (bKash Production)
BKASH_API_KEY=your_production_bkash_api_key
BKASH_API_SECRET=your_production_bkash_api_secret
BKASH_USERNAME=your_production_bkash_username
BKASH_PASSWORD=your_production_bkash_password
BKASH_BASE_URL=https://tokenized.pay.bka.sh/v1.2.0-beta
BKASH_APP_KEY=your_production_bkash_app_key
BKASH_APP_SECRET=your_production_bkash_app_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@sunbank.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=Sun Bank <noreply@sunbank.com>

# SMS Gateway (SSL Wireless Production)
SSL_API_TOKEN=your_ssl_wireless_api_token
SSL_SID=your_ssl_sid
SMS_SENDER=SunBank

# Twilio for International SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Admin Configuration
ADMIN_EMAIL=admin@sunbank.com
ADMIN_PHONE=01340809337
SUPER_ADMIN_PHONE=01340809337

# Financial Configuration
MIN_DEPOSIT_AMOUNT=100
MAX_DEPOSIT_AMOUNT=100000
MIN_WITHDRAWAL_AMOUNT=500
MAX_WITHDRAWAL_AMOUNT=50000
DAILY_WITHDRAWAL_LIMIT=100000
WITHDRAWAL_CHARGE_PERCENT=2
WELCOME_BONUS=100

# Referral System
REFERRAL_COMMISSION_PERCENT=10
REFERRAL_BONUS=50

# Profit Calculation
PROFIT_CREDIT_TIME=09:00
AUTO_PROFIT_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log

# Monitoring
SENTRY_DSN=your_sentry_dsn_url
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# CDN Configuration
CDN_URL=https://cdn.sunbank.com
UPLOAD_MAX_SIZE=10485760 # 10MB

# Cache Configuration
REDIS_CACHE_TTL=3600 # 1 hour
REDIS_SESSION_TTL=86400 # 24 hours

# Rate Limiting
RATE_LIMIT_WINDOW=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=10

# Backup Configuration
BACKUP_CRON_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please try again later.

# Feature Flags
ENABLE_TWO_FACTOR=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=true
ENABLE_REFERRAL_SYSTEM=true
ENABLE_AUTO_WITHDRAWAL=true
ENABLE_PROFIT_AUTO_CREDIT=true
