# Server Configuration
PORT=5000
NODE_ENV=production

# Database
MONGODB_URI=mongodb://localhost:27017/sunbank
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d
BCRYPT_SALT_ROUNDS=12

# Payment Gateway (bKash Sandbox)
BKASH_API_KEY=your_bkash_api_key
BKASH_API_SECRET=your_bkash_api_secret
BKASH_USERNAME=your_bkash_username
BKASH_PASSWORD=your_bkash_password
BKASH_BASE_URL=https://tokenized.sandbox.bka.sh/v1.2.0-beta

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@sunbank.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Admin
ADMIN_EMAIL=admin@sunbank.com
ADMIN_PASSWORD=secure_admin_password_123

# Frontend URL
FRONTEND_URL=http://localhost:3000
